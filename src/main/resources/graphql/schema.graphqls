type Task{
    id: Int
    text: String!
    completed: Boolean!
}

type Query{
    taskById(id:ID): Task
    getTasks:[Task]
}

type Mutation{
    createNewTask(text:String,completed:Boolean):Task
    modifyTask(id:Int,text:String,completed:Boolean):Task
    modifyCompletedStatusTask(id:Int):Task
    deleteTask(id:Int):Task
}

